<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/activity_vertical_margin">

    <!--descendantFocusability needed for onClickItemListener
    responsiveness-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productNameView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:text="Product Name" />

            <TextView
                android:id="@+id/priceNameView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:text="Price" />

        </LinearLayout>

        <TextView
            android:id="@+id/quantityNameView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="Quantity:" />

    </LinearLayout>

    <Button
        android:id="@+id/saleBtn"
        android:layout_width="@dimen/sold_btn_dimen"
        android:layout_height="@dimen/sold_btn_dimen"
        android:focusable="false"
        android:text="@string/sale_text" />

</LinearLayout>